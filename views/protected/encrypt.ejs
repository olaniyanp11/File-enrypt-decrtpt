<%- include('../partials/header') %>

<section class="py-20 px-6 max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">üîê Encrypt a Document</h1>

  <form action="/encrypt" method="POST" enctype="multipart/form-data" class="bg-white shadow-md p-6 rounded-lg">
    <label class="block mb-4">
      <span class="text-gray-700">Upload PDF or DOCX:</span>
      <input type="file" name="document" accept=".pdf,.docx" required class="mt-2 block w-full text-sm border border-gray-300 rounded p-2" />
    </label>

    <label class="block mb-6">
      <span class="text-gray-700">Choose Encryption Type:</span>
      <select name="method" class="mt-2 block w-full p-2 border rounded text-sm">
        <option value="aes">AES (Symmetric)</option>
        <option value="rsa">RSA (Asymmetric)</option>
      </select>
    </label>

    <button type="submit" class="bg-[#ec4a05] text-white px-6 py-2 rounded hover:bg-[#d93c00]">Encrypt File</button>
  </form>
</section>

