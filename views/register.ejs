<%- include('partials/header') %>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-sm p-8 bg-white shadow-lg rounded-lg">
    <h2 class="text-2xl font-semibold text-center mb-6">Sign Up</h2>

    <form action="/register" method="POST" class="space-y-4" id="signupForm">
      <div>
        <label class="block mb-1 font-medium">Full Name</label>
        <input 
          type="text" 
          name="name" 
          required 
          class="w-full px-4 py-2 border rounded border-gray-400 focus:outline-none focus:ring-2 focus:ring-[#ec4a05] " />
      </div>

      <div>
        <label class="block mb-1 font-medium">Email</label>
        <input 
          type="email" 
          name="email" 
          required 
          class="w-full px-4 py-2 border rounded border-gray-400 focus:outline-none focus:ring-2 focus:ring-[#ec4a05] " />
      </div>

      <div>
        <label class="block mb-1 font-medium">Password</label>
        <input 
          type="password" 
          name="password" 
          required 
          class="w-full px-4 py-2 border border-gray-400 rounded focus:outline-none focus:ring-2 focus:ring-[#ec4a05] " />
      </div>

      <button 
        type="submit" 
        class="w-full bg-[#ec4a05]  text-white py-2 rounded hover:bg-[#ec4a05]  transition"
        id="submitBtn">
        Register
      </button>
    </form>
  <div id="loader" class="hidden flex justify-center mt-4">
        <div class="w-6 h-6 border-4 border-[#ec4a05]  border-t-transparent rounded-full animate-spin"></div>
      </div>
    </form>
    <p class="text-sm text-center text-gray-500 mt-4">
      Already have an account? 
      <a href="/login" class="text-[#ec4a05]  hover:underline">Login</a>
    </p>
  </div>
</div>

<!-- loading script -->
<script>
  const form = document.getElementById('signupForm');
  const loader = document.getElementById('loader');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', () => {
    loader.classList.remove('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Signing Up...';
  });
</script>

